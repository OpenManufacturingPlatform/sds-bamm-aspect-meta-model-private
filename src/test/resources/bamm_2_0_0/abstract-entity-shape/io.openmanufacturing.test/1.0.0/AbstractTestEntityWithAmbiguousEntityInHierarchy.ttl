@prefix : <urn:bamm:io.openmanufacturing.test:1.0.0#> .
@prefix bamm: <urn:bamm:io.openmanufacturing:meta-model:2.0.0#> .
@prefix bamm-c: <urn:bamm:io.openmanufacturing:characteristic:2.0.0#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

:AbstractTestEntity a bamm:AbstractEntity ;
   bamm:name "AbstractTestEntity" ;
   bamm:properties ( :abstractTestProperty ).

:abstractTestProperty a bamm:Property ;
   bamm:name "abstractTestProperty" ;
   bamm:characteristic [
      a bamm:Characteristic ;
      bamm:name "Integer" ;
      bamm:dataType xsd:integer
   ] .

:ExtendingEntityLevelOne a bamm:Entity ;
   bamm:name "ExtendingEntityLevelOne" ;
   bamm:extends :AbstractTestEntity ;
   bamm:properties ( :testPropertyLevelOne :abstractTestProperty ) .

:testPropertyLevelOne a bamm:Property ;
   bamm:name "testPropertyLevelOne" ;
   bamm:characteristic [
      a bamm:Characteristic ;
      bamm:name "String" ;
      bamm:dataType xsd:string
   ] .

:ExtendingEntityLevelTwo a bamm:Entity ;
   bamm:name "ExtendingEntityLevelTwo" ;
   bamm:extends :ExtendingEntityLevelOne ;
   bamm:properties ( :testPropertyLevelTwo
                     [ bamm:property :anotherTestPropertyLevelTwo ; bamm:payloadName "testPropertyLevelOne" ] ) .

:testPropertyLevelTwo a bamm:Property ;
   bamm:name "testPropertyLevelTwo" ;
   bamm:characteristic [
      a bamm:Characteristic ;
      bamm:name "PositiveInteger" ;
      bamm:dataType xsd:positiveInteger
   ] .

:anotherTestPropertyLevelTwo a bamm:Property ;
   bamm:name "anotherTestPropertyLevelTwo" ;
   bamm:characteristic [
      a bamm:Characteristic ;
      bamm:name "NegativeInteger" ;
      bamm:dataType xsd:negativeInteger
   ] .
